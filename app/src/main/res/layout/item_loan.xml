<!-- res/layout/item_loan.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:gravity="center_vertical"
    android:background="@drawable/bg_loan_item">

    <!-- CAPA DO LIVRO -->
    <ImageView
        android:id="@+id/imgCover"
        android:layout_width="65dp"
        android:layout_height="95dp"
        android:scaleType="centerCrop"
        android:src="@drawable/placeholder_book"
        android:layout_marginEnd="12dp"
        android:background="@drawable/bg_image_border"
        android:padding="2dp" />

    <!-- ÁREA DE INFORMAÇÕES -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Título do livro"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvDue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Devolução: 10/10/2025"
            android:textSize="14sp"
            android:layout_marginTop="4dp" />

        <!-- BOTÕES -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <Button
                android:id="@+id/btnRenew"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Renovar"
                style="?attr/materialButtonOutlinedStyle" />

            <Button
                android:id="@+id/btnReturn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Devolver"
                android:layout_marginStart="8dp" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
