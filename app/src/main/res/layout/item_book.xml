<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp">

        <!-- placeholder da capa -->
        <ImageView
            android:id="@+id/imgThumb"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_launcher_foreground"
            android:alpha="0.25"
            android:layout_gravity="center_vertical" />

        <!-- textos -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="12dp">

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Clean Code"
                android:textStyle="bold"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvAuthor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Robert C. Martin"
                android:textSize="13sp"
                android:textColor="@color/black" />

            <!-- status vermelho -->
            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Oculto"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="12sp"
                android:visibility="gone"
                android:layout_marginTop="2dp"/>
        </LinearLayout>

        <!-- botão redondo que abre o menu -->
        <ImageButton
            android:id="@+id/btnMore"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/bg_circle_icon"
            android:src="@drawable/outline_box_edit_24"
            android:contentDescription="Mais opções"
            app:tint="@color/unifor_traditional_blue" />
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
