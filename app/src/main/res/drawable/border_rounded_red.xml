<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Borda vermelha -->
    <stroke
        android:width="2dp"
        android:color="#D32F2F" />

    <!-- Fundo levemente vermelho (quase transparente) - opcional -->
    <solid android:color="#11D32F2F" />

    <!-- Cantos arredondados -->
    <corners android:radius="16dp" />

    <!-- Espaçamento interno (para o texto não grudar na borda) -->
    <padding
        android:left="16dp"
        android:top="12dp"
        android:right="16dp"
        android:bottom="12dp" />
</shape>