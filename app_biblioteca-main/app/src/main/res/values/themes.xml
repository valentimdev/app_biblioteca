<resources xmlns:tools="http://schemas.android.com/tools">


    <style name="Base.Theme.BibliotecaUnifor" parent="Theme.Material3.DayNight.NoActionBar">


        <item name="colorPrimary">@color/unifor_vibrant_blue</item>
        <item name="colorOnPrimary">@color/text_on_primary</item>
        <item name="colorPrimaryContainer">@color/unifor_traditional_blue</item>


        <item name="android:colorBackground">@color/white</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/text_primary</item>


        <item name="android:statusBarColor">@color/unifor_traditional_blue</item>
        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>


        <item name="toolbarStyle">@style/Widget.BibliotecaUnifor.Toolbar</item>
        <item name="materialButtonStyle">@style/Widget.BibliotecaUnifor.Button</item>

    </style>

    <style name="Theme.BibliotecaUnifor" parent="Base.Theme.BibliotecaUnifor" />


    <style name="Widget.BibliotecaUnifor.Toolbar" parent="Widget.Material3.Toolbar">
        <item name="android:background">@color/white</item>
        <item name="titleTextColor">@color/text_primary</item>
        <item name="android:titleTextAppearance">@style/TextAppearance.BibliotecaUnifor.ToolbarTitle</item>
    </style>

    <style name="TextAppearance.BibliotecaUnifor.ToolbarTitle" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textAllCaps">true</item>
        <item name="android:letterSpacing">0.08</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>


    <style name="Widget.BibliotecaUnifor.Button" parent="Widget.Material3.Button">
        <item name="android:backgroundTint">@color/unifor_vibrant_blue</item>
        <item name="android:textColor">@color/text_on_primary</item>
        <item name="cornerRadius">14dp</item>
    </style>


    <style name="TextAppearance.BibliotecaUnifor.Title" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
